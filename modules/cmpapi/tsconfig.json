{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "lib/mjs",
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "downlevelIteration": true,
    "esModuleInterop": true,
    "preserveConstEnums": true,
    "resolveJsonModule": true,
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "lib": [
      "es2016", "DOM"
    ]
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src"
  ]
}
